	public Player(String name, String pClass){
		this.name=name;
		this.pClass=pClass;
		for(counter=0;counter<=invSize.length;counter++){
			invSize[counter]=null;
		}
	}
	public static void pickUp(Equipment equip){
		for(counter=0;counter<invSize.length;counter++){
		if(invSize[counter]==null){
			invSize[counter]=equip;
			break;
		}
		}
		if(counter==invSize.length){
			System.out.println("Your inventory is full, would you like to drop an item?");
			response=scan.next();
			if(!response.equals("yes")&&!response.equals("no")){
				System.out.println(response+" is not a valid answer.");
				System.out.println("Please try again");
				response=scan.next();
			}
			else if(response.equals("yes")){
				
			}
			else if(response.equals("no")){
				
			}
		}
	}
	public static int getHealth(){
		return health;
	}
	public static void setHealth(int dmg){
		health-=dmg;
	}
	public static int getCoins(){
		return coins;
	}
	public static void addCoins(int amount){
		coins+=amount;
	}
	public static void subCoins(int amount){
		coins-=amount;
	}
	public static String getName(){
		return name;
	}
	public static void setName(String newName){
		name=newName;
	}
	public static Equipment getWeap(){
