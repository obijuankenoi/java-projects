package Gamemode;
import java.util.Scanner;
import java.util.Random;
public class Player
{
	int constant=0;
	static int counter=0,numResponse,pClass,roll=0,pAttack=0;
	static Scanner scan=new Scanner(System.in);
	static Random gen=new Random();
	public static String name,response,result,death,shield,quiver,spellBook;
    public static int health=100,defense=0,coins=0;
	public Equipment[] secondary;
	public Equipment[] inv;
	public static Equipment invSize[]=new Equipment[30];
	static String weapon;
	public Player(String newName, int newClass){
		name=newName;
		pClass=newClass;
		for(counter=0;counter<=invSize.length;counter++){
			invSize[counter]=null;
		}
	}
	public static void pickUp(Equipment equip){
		for(counter=0;counter<invSize.length;counter++){
		if(invSize[counter]==null){
			invSize[counter]=equip;
			break;
		}
		}
		if(counter==invSize.length){
			System.out.println("Your inventory is full, would you like to drop an item?");
			response=scan.next();
			if(!response.equals("yes")&&!response.equals("no")){
				System.out.println(response+" is not a valid answer.");
				System.out.println("Please try again");
				response=scan.next();
			}
			else if(response.equals("yes")){
				
			}
			else if(response.equals("no")){
				
			}
		}
	}
	public static int getHealth(){
		return health;
	}
	public static void setHealth(int dmg){
		health=dmg;
	}
	public static void addHealth(int amount){
		health+=amount;
	}
	public static void subHealth(int dmg){
		health-=dmg;
	}
	public static int getCoins(){
		return coins;
	}
	public static void addCoins(int amount){
		coins+=amount;
	}
	public static void subCoins(int amount){
		coins-=amount;
	}
	public static String getName(){
		return name;
	}
	public static void setName(String newName){
		name=newName;
	}
	public static String getWeap(){
		return weapon;
	}
	public static void setWeap(String swords){
		weapon=swords;
	}
	public static void validNumChk(int newNumResponse){
		do{
		numResponse=newNumResponse;
		if(numResponse<1||numResponse>3){
		System.out.println(numResponse+" is not a valid answer.");
		System.out.println("please try again.");
		numResponse=scan.nextInt();
		}
		}while(numResponse<1||numResponse>3);
	}
	public static void validChk(String newResponse){
		do{
		response=newResponse;
		if(!response.equals("yes")&&!response.equals("no")){
			System.out.println(response+" is not a valid answer.");
			System.out.println("Please try again");
			response=scan.next();
		}
		}while(!response.equals("yes")&&!response.equals("no"));
	}
	public static String getResponse(){
		return response;
	}
	public static void setResponse(String newResponse){
		response=newResponse;
	}
	public static int getNumResponse(){
		return numResponse;
	}
	public static void setNumResponse(int newNum){
		numResponse=newNum;
	}
	public static int getPClass(){
		return pClass;
	}
	public static void setPClass(int newClass){
		pClass=newClass;
	}
	public static int getRoll(){
		roll=gen.nextInt();
		return roll;
	}
	public static String getShield(){
		return shield;
	}
	public static void setShield(String newShield){
		shield=newShield;
	}
	public static String getQuiver(){
		return quiver;
	}
	public static void setQuiver(String newQuiver){
		quiver=newQuiver;
	}
	public static String getSpellBook(){
		return spellBook;
	}
	public static void setSpellBook(String newSpellBook){
		spellBook=newSpellBook;
	}
	public static int Attack(){
		pAttack=gen.nextInt(10);
		return pAttack;
	}
	public static int getDmg(){
		return pAttack;
	}
}
