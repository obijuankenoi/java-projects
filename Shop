	public static void genWeap(int clss){
		Random gen=new Random();
		int roll=1;
		if(roll<=2){
			switch(clss){
			case(1) :{	
				Equipment sword1=new Equipment(mods[gen.nextInt(mods.length-1)], swords[gen.nextInt(swords.length-1)+1], null, null, gen.nextInt(10)+1, gen.nextInt(10)+1);
				Weapon.setWeap(sword1);
				break;
			}
			case(2) :{
				Weapon bow1=new Weapon(mods[gen.nextInt(mods.length-1)+1],bows[gen.nextInt(bows.length-1)+1],gen.nextInt(10),gen.nextInt(10));
				Weapon.setWeap(bow1);
				break;
			}
			case(3) :{
				Weapon wand1=new Weapon(mods[gen.nextInt(mods.length-1)+1],bows[gen.nextInt(bows.length-1)+1],gen.nextInt(10),gen.nextInt(10));
				Weapon.setWeap(wand1);
				break;
			}
			}
		}
		else if(roll>2 && roll<=5){
			
		}
		else if(roll>5 && roll<=8){
			
		}
		else{
			
		}
	}
	public static void genSec(int clss){
		Random gen=new Random();
		switch(clss){
		case(1) :{
			Secondary shield1=new Secondary(mods[gen.nextInt(mods.length-1)+1],shields[gen.nextInt(shields.length-1)+1],null,gen.nextInt(10),gen.nextInt(10));
			Secondary.setSecond(shield1);
			break;
		}
		case(2) :{
			Secondary quiver1=new Secondary(mods[gen.nextInt(mods.length-1)+1], quivers[gen.nextInt(quivers.length-1)+1],null, gen.nextInt(10), gen.nextInt(10));
			Secondary.setSecond(quiver1);
			break;
		}
		case(3) :{
			Secondary spellBook1=new Secondary(mods[gen.nextInt(mods.length-1)+1],spellBook[gen.nextInt(spellBook.length-1)+1],null,gen.nextInt(10),gen.nextInt(10));
			Secondary.setSecond(spellBook1);
			break;
		}
		}
	}
	public static void genPotion(int clss){
		Random gen=new Random();
		switch(clss){
		case(1) :{
			Potion potion1=new Potion(null, null, null, potions[gen.nextInt(potions.length-1)+1], gen.nextInt(10), gen.nextInt(10));
			Potion.setPotion(potion1);
			break;
		}
		case(2) :{
			Potion potion1=new Potion(null, null, null, potions[gen.nextInt(potions.length-1)+1], gen.nextInt(10), gen.nextInt(10));
